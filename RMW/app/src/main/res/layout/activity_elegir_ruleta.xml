<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_elegir_ruleta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joseluis.rmw.ElegirRuleta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cáceres. Avda Montaña."
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:layout_margin="10dp"
                android:padding="20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:id="@+id/botonEntrar1"
                android:background="#0000FF"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:layout_below="@+id/tv1"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:id="@+id/botonModificar1"
                android:background="#0000FF"
                android:textColor="#FFFFFF"
                android:layout_margin="10dp"
                android:layout_below="@+id/botonEntrar1"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
